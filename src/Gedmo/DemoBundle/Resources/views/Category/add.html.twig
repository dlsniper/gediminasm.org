{% extends "GedmoDemoBundle::sub_layout.html.twig" %}

{% block actions %}
<ul>
    <li><a href="{{ path('demo_category_tree') }}">Show Tree</a></li>
    <li><a href="{{ path('demo_category_list') }}">Category List</a></li>
</ul>
{% endblock %}

{% block content %}
{{ parent() }}

{% form_theme form "GedmoDemoBundle::form.html.twig" %}

<div id="post-comment" class="row">
    <form action="{{ path('demo_category_save') }}" method="post">
      <fieldset>
      <legend>Add Category</legend>
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_rest(form) }}
        <div class="actions">
          <button class="btn cancel" type="submit">Cancel</button>
          <button class="btn primary" type="submit">Save</button>
        </div>
      </fieldset>
    </form>
</div>

{% endblock %}
