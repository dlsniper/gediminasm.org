{% extends "GedmoDemoBundle::layout.html.twig" %}

{% block actions %}
<ul>
    <li><a href="{{ path('demo_category_tree') }}">Show Tree</a></li>
    <li><a href="{{ path('demo_category_list') }}">Category List</a></li>
</ul>
{% endblock %}

{% block scripts %}
<script type="text/javascript">
$(document).ready(function() {
    $('button.cancel').click(function () {
        window.history.back(-1);
    });
});
</script>
{% endblock %}

{% block content %}
{{ parent() }}

{% form_theme form "GedmoDemoBundle::form.html.twig" %}

<div class="row">
    <form action="{{ path('demo_category_edit', {'id': form.vars.value.id}) }}" method="post">
      <fieldset>
      <legend>Edit Category</legend>
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.parent) }}
        {{ form_rest(form) }}
        <div class="actions">
          <button class="btn primary" type="submit">Update</button>
        </div>
      </fieldset>
    </form>
</div>

{% endblock %}
